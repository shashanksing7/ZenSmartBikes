<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.UserProfileFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@color/AppColor">


        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Username"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/userEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="User Email"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:id="@+id/numberOfRidesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Number of Rides"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/userprofilehelp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="50dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facing Issues ?"
            android:textSize="30dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reach Out to Our Customer Care :






            +91 9799081629

             contact@zentorc.com
"
            android:textSize="20dp"
            android:layout_marginHorizontal="30dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="Start"
            android:background="@color/white"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/LogoutButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@color/AppColor"
        android:text="Logout"/>
</LinearLayout>
